namespace std {
	typedef int out_of_range;

	typedef class basic_string {
	public:
		basic_string(const basic_string& str);
		basic_string(const char* s);
		basic_string(char c);
		~basic_string();

		basic_string& operator=(const basic_string& str);
		basic_string& operator=(const char* s);
		basic_string& operator=(char c);
		
		const char* c_str() const noexcept;
		basic_string substr(size_t pos, size_t npos) const;
	} string;

	class basic_istream {
	public:
		basic_istream();
		basic_istream(const char* s);
		~basic_istream();

		basic_istream& operator>>(const char* s);
		
		void width(size_t buf_size) const;
	};
	
	basic_istream cin;
}